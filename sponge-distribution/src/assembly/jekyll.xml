<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>jekyll</id>
    <formats>
        <format>dir</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>${project.basedir}/src/jekyll</directory>
            <outputDirectory></outputDirectory>
            <excludes>
                <exclude>_config.yml</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/jekyll</directory>
            <outputDirectory></outputDirectory>
            <filtered>true</filtered>
            <includes>
                <include>_config.yml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/generated-docs</directory>
            <outputDirectory>docs</outputDirectory>
            <includes>
                <include>*.pdf</include>
                <include>sponge-reference.html</include>
                <include>asciidoctor.css</include>
                <include>coderay-asciidoctor.css</include>
                <include>images/</include>
            </includes>
            <excludes>
                <exclude>images/*.di*</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}/src/asciidoc</directory>
            <outputDirectory></outputDirectory>
            <excludes>
                <exclude>sponge-developer-guide.adoc</exclude>
                <exclude>sponge-reference.adoc</exclude>
                <exclude>images/</exclude>
            </excludes>
        </fileSet>

        <fileSet>
            <directory>${project.build.directory}/aggregated_javadoc</directory>
            <outputDirectory>docs/javadoc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/../sponge-api/src/main/resources/org/openksavi/sponge/schema/</directory>
            <outputDirectory>schema</outputDirectory>
            <includes>
                <include>config.xsd</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/standalone</directory>
            <outputDirectory>download</outputDirectory>
            <includes>
                <include>${standalonePackageName}-standalone.*</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/images</directory>
            <outputDirectory>images</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.basedir}/src/favicons</directory>
            <outputDirectory>/</outputDirectory>
        </fileSet>

        <!-- Blog. -->
        <fileSet>
            <directory>${project.basedir}/src/blog/</directory>
            <outputDirectory>_posts</outputDirectory>
            <includes>
                <include>*.adoc</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>