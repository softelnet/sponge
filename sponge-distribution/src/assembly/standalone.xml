<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.0.0 http://maven.apache.org/xsd/assembly-2.0.0.xsd">
    <id>standalone</id>
    <formats>
        <format>zip</format>
    </formats>
    <fileSets>
        <fileSet>
            <directory>src/main/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>sponge.bat</include>
            </includes>
            <lineEnding>dos</lineEnding>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>src/main/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>sponge</include>
            </includes>
            <lineEnding>unix</lineEnding>
            <fileMode>0755</fileMode>
            <filtered>true</filtered>
        </fileSet>
        <fileSet>
            <directory>../sponge-camel</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-core</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-groovy</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-integration-tests</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-jruby</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-jython</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-nashorn</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-spring</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-py4j</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-midi</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-rpi-pi4j</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-rpi-grovepi</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-reactivex</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-rest-api-client</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-rest-api-server</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-remote-api-client</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-remote-api-server</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-tensorflow</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
            <excludes>
                <exclude>%regex[.*\.h5]</exclude>
                <exclude>examples/**/_*_/</exclude>
                <exclude>examples/**/__pycache__/</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>../sponge-standalone</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>examples/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-examples-projects/sponge-examples-project-standalone-camel-groovy</directory>
            <outputDirectory>examples/standalone/camel_groovy</outputDirectory>
            <includes>
                <include>config/**</include>
                <include>kb/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-examples-projects/sponge-examples-project-standalone-camel-xml</directory>
            <outputDirectory>examples/standalone/camel_xml</outputDirectory>
            <includes>
                <include>config/**</include>
                <include>kb/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-examples-projects/sponge-examples-project-iot-rpi</directory>
            <outputDirectory>examples/sponge-iot-rpi</outputDirectory>
            <includes>
                <include>kb/**</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>../sponge-examples-projects/sponge-examples-project-mpd-mpc</directory>
            <outputDirectory>examples/sponge-mpd-mpc</outputDirectory>
            <includes>
                <include>kb/**</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>src/release</directory>
            <outputDirectory>config</outputDirectory>
            <includes>
                <include>logback.xml</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/generated-docs</directory>
            <outputDirectory>docs</outputDirectory>
            <excludes>
                <exclude>images/*.di*</exclude>
                <exclude>*-developer-guide.*</exclude>
                <exclude>*-quickstart.html</exclude>
                <exclude>*-user-guide.html</exclude>
                <exclude>includes/</exclude>
            </excludes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/aggregated_javadoc</directory>
            <outputDirectory>docs/javadoc</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/generated-sources/license</directory>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>THIRD-PARTY.txt</include>
            </includes>
        </fileSet>
        <fileSet>
            <directory>${project.build.directory}/generated-resources</directory>
            <outputDirectory>docs/licenses</outputDirectory>
            <includes>
                <include>licenses.xml</include>
            </includes>
        </fileSet>

        <fileSet>
            <directory>${project.basedir}</directory>
            <outputDirectory></outputDirectory>
            <includes>
                <include>README*</include>
                <include>NOTICE*</include>
                <include>LICENSE*</include>
            </includes>
        </fileSet>
    </fileSets>
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>*:*</include>
            </includes>
        </dependencySet>
    </dependencySets>
</assembly>